@page
@model LibraryAPIWebApp.Pages.UsersModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Informatics-2021-Lab2 Library</title>
    <link rel="stylesheet" href="css/site.css" />

</head>
<body>
    <h1>Онлайн бібліотека</h1>
    <h3>Додати користувача</h3>
    <form action="javascript:void(0);" method="POST" onsubmit="addCategory()">
        <input type="text" id="add-name" placeholder="ПІБ користувача">
        <input type="text" id="add-email" placeholder="Пошта">
        <input type="text" id="add-passwordHash" placeholder="Пароль">
        <input type="submit" value="Додати">
    </form>

    <div id="editForm">
        <h3>Змінити</h3>
        <form action="javascript:void(0);" onsubmit="updateCategory()">
            <input type="hidden" id="edit-id">
            <input type="text" id="edit-name">
            <input type="text" id="edit-email">
            <input type="text" id="edit-passwordHash">
            <input type="submit" value="Зберегти">
            <a onclick="closeInput()" aria-label="Close">&#10006;</a>
        </form>
    </div>

    <p id="counter"></p>

    <table>
        <tr>
            <th>ПІБ користувача</th>
            <th>Пошта</th>
        </tr>
        <tbody id="users"></tbody>
    </table>

    <script src="js/users.js" asp-append-version="true"></script>
    <script type="text/javascript">
        getCategories();
    </script>
</body>
</html>
