@page
@model LibraryAPIWebApp.Pages.BooksModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Informatics-2021-Lab2 Library</title>
    <link rel="stylesheet" href="css/site.css" />

</head>
<body>
    <h1>Онлайн бібліотека</h1>
    <h3>Додати книгу</h3>
    <form action="javascript:void(0);" method="POST" onsubmit="addCategory()">
        <input type="text" id="add-title" placeholder="Назва книги">
        <input type="text" id="add-description" placeholder="Інформація про книгу">
        <input type="text" id="add-publishedYear" placeholder="Рік написання">
        <input type="text" id="add-pageCount" placeholder="Кількість сторінок">
        <input type="submit" value="Додати">
    </form>

    <div id="editForm">
        <h3>Змінити</h3>
        <form action="javascript:void(0);" onsubmit="updateCategory()">
            <input type="hidden" id="edit-id">
            <input type="text" id="edit-name">
            <input type="text" id="edit-description">
            <input type="text" id="edit-publishedYear">
            <input type="text" id="edit-pageCount">
            <input type="submit" value="Зберегти">
            <a onclick="closeInput()" aria-label="Close">&#10006;</a>
        </form>
    </div>

    <p id="counter"></p>

    <table>
        <tr>
            <th>Назва книги</th>
            <th>Інформація про книгу</th>
            <th>Рік написання</th>
            <th>Кількість сторінок</th>
        </tr>
        <tbody id="books"></tbody>
    </table>

    <script src="js/books.js" asp-append-version="true"></script>
    <script type="text/javascript">
        getCategories();
    </script>
</body>
</html>