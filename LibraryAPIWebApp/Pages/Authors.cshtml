@page
@model LibraryAPIWebApp.Pages.AuthorsModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Informatics-2021-Lab2 Library</title>
    <link rel="stylesheet" href="css/site.css" />

</head>
<body>
    <h1>Онлайн бібліотека</h1>
    <h3>Додати автора</h3>
    <form action="javascript:void(0);" method="POST" onsubmit="addCategory()">
        <input type="text" id="add-name" placeholder="ПІБ автора">
        <input type="text" id="add-description" placeholder="Інформація про автора">
        <input type="submit" value="Додати">
    </form>

    <div id="editForm">
        <h3>Змінити</h3>
        <form action="javascript:void(0);" onsubmit="updateCategory()">
            <input type="hidden" id="edit-id">
            <input type="text" id="edit-name">
            <input type="text" id="edit-description">
            <input type="submit" value="Зберегти зміни">
            <a onclick="closeInput()" aria-label="Close">&#10006;</a>
        </form>
    </div>

    <p id="counter"></p>

    <table>
        <tr>
            <th>Ім'я</th>
            <th>Про автора</th>
        </tr>
        <tbody id="authors"></tbody>
    </table>

    <script src="js/authors.js" asp-append-version="true"></script>
    <script type="text/javascript">
        getCategories();
    </script>
</body>
</html>
